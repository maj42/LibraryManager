<Application x:Class="LibraryManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:resConverters="clr-namespace:LibraryManager.Resources.Converters"
             xmlns:local="clr-namespace:LibraryManager">
    <Application.Resources>
        <ResourceDictionary>
            <resConverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <resConverters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
