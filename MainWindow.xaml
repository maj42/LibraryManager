<Window x:Class="LibraryManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:LibraryManager.ViewModels"
        xmlns:res="clr-namespace:LibraryManager.Resources"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:models="clr-namespace:LibraryManager.Models"
        xmlns:local="clr-namespace:LibraryManager" 
        mc:Ignorable="d"
        Icon="Resources/Appicon.ico"
        Title="Library Manager" Height="600" Width="1000">
    
    <Window.Resources>
        <CollectionViewSource x:Key="ReversedLogs" Source="{Binding LogMessages}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Timestamp" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Z" Modifiers="Ctrl"
                    Command="{Binding UndoCommand}"/>
    </Window.InputBindings>

    <Grid Margin="10">
        <!-- Grid with 2 columns: Main and preview -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/> <!-- Main workspace -->
            <ColumnDefinition Width="5"/> <!-- Splitter -->
            <ColumnDefinition Width="2*"/> <!-- Preview/details -->
        </Grid.ColumnDefinitions>

        <!-- Rows: controls, list, tab selection -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Toolbar -->
            <RowDefinition Height="*"/> <!-- File list -->
            <RowDefinition Height="200"/> <!-- Bottom tabs -->
        </Grid.RowDefinitions>

        <!-- Top selection -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                        Margin="0,0,0,5">
                <Button Content="Load PDF Files" 
                        Command="{Binding LoadFilesCommand}" 
                        Margin="0,0,10,0"/>
                <Button Content="Assign Matched Files" 
                        Command="{Binding AssignMatchedFilesCommand}" 
                        Margin="0,0,10,0"/>
                <Button Content="Move Files" 
                        Command="{Binding MoveFilesCommand}" 
                        Margin="0,0,10,0"/>
                <Button Content="Archive" 
                        Command="{Binding ArchiveCommand}" 
                        Margin="0,0,10,0"/>
                <Button Content="Move to Root"
                        Command="{Binding MoveToRootCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Rename"
                        Command="{Binding RenameProgramCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}" 
                        Margin="0,0,10,0"/>
            </StackPanel>

            <ProgressBar Height="10" Margin="0,0,0,5"
                         Minimum="0" Maximum="100"
                         Value="{Binding ProgressValue}"/>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Program:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <Grid Width="200" Margin="0,0,10,0">
                    <TextBlock x:Name="SuggestionTextBlock"
                               Text="{Binding CurrentSuggestionDisplay}"
                               FontFamily="{Binding ElementName=ProgramTextBox, Path=FontFamily}"
                               FontSize="{Binding ElementName=ProgramTextBox, Path=FontSize}"
                               Padding="{Binding ElementName=ProgramTextBox, Path=Padding}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Foreground="LightGray"
                               IsHitTestVisible="False"
                               Panel.ZIndex="999"
                               Margin="{Binding SuggestionMargin}"/>
                    <TextBox x:Name="ProgramTextBox"
                             Text="{Binding ProgramName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             PreviewKeyDown="ProgramTextBox_PreviewKeyDown"
                             TextChanged="ProgramTextBox_TextChanged"
                             Background="Transparent"/>
                </Grid>
                <Button Content="Set" Command="{Binding SetProgramCommand}"
                        CommandParameter="{Binding}"
                        IsEnabled="{Binding CanApplyProgram}"
                        Margin="0,0,5,0"/>
                <Button Content="Create Folders" 
                        Command="{Binding CreateProgramFoldersCommand}"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Instruments and preview/metadata -->
        <TabControl x:Name="MainTabs"
                    Grid.Row="1" 
                    Grid.Column="2" 
                    Margin="10,0,0,0">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <DockPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal" 
                                        DockPanel.Dock="Right" 
                                        Margin="0,0,10,0">
                                <StackPanel.Resources>
                                    <Style TargetType="Button" 
                                           BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="Padding" Value="4,0"/>
                                        <Setter Property="MinHeight" Value="20"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </StackPanel.Resources>
                                <Button Content="Fold All" Command="{Binding FoldAllCommand}" Margin="0,0,5,0"/>
                                <Button Content="Unfold All" Command="{Binding UnfoldAllCommand}"/>
                            </StackPanel>
                            <TabPanel x:Name="HeaderPanel"
                                      Panel.ZIndex="1"
                                      IsItemsHost="True"
                                      Background="Transparent"/>
                        </DockPanel>
                        <ContentPresenter Grid.Row="1"
                                          x:Name="ContentSite"
                                          ContentSource="SelectedContent"/>
                    </Grid>
                </ControlTemplate>
            </TabControl.Template>
            
            <TabItem x:Name="InstrumentsTab" 
                     Header="Instruments">
                <DockPanel>
                    <ListBox ItemsSource="{Binding Instruments}"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             HorizontalContentAlignment="Stretch"
                             ScrollViewer.CanContentScroll="True"
                             VirtualizingPanel.ScrollUnit="Pixel">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="{Binding IsExpanded}"
                                          AllowDrop="True"
                                          Background="Transparent"
                                          PreviewDragOver="Instrument_DragOver"
                                          PreviewDragLeave="Instrument_DragLeave"
                                          PreviewDrop="Instrument_Drop"
                                          PreviewMouseWheel="Instrument_MouseWheel"
                                          Tag="{Binding}">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding Name}" Margin="5,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="(Program exists)"
                                                       Foreground="Green"
                                                       Margin="5,0,0,0"
                                                       Visibility="{Binding ProgramFolderExists, 
                                                           Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Expander.Header>

                                    <Border x:Name="InstrumentHighlightBorder"
                                            SnapsToDevicePixels="True"
                                            Focusable="False"
                                            CornerRadius="10"
                                            Background="Transparent"
                                            Margin="0,5">

                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAliasMatched}" Value="True">
                                                        <Setter Property="BorderBrush" Value="LightGreen"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <StackPanel Margin="10,5,0,5"
                                                    IsHitTestVisible="True">

                                            <ItemsControl ItemsSource="{Binding ExistingFiles}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="• " Foreground="#888"/>
                                                            <TextBlock Text="{Binding FileName}" Foreground="#888"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <ItemsControl ItemsSource="{Binding AssignedFiles}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    PreviewMouseMove="AssignedFile_PreviewMouseMove">
                                                            <TextBlock Text="• " Foreground="DarkSlateGray"/>
                                                            <TextBlock Text="{Binding FileName}" Foreground="Black"/>
                                                            <TextBlock Text=" → " Foreground="Gray" Margin="5,0,0,0"
                                                                       Visibility="{Binding MatchedInstrumentName, 
                                                                       Converter={StaticResource NullToVisibilityConverter}}"/>
                                                            <TextBlock Text="{Binding MatchedInstrumentName}"
                                                                       Foreground="SlateGray"
                                                                       FontStyle="Italic"
                                                                       Visibility="{Binding MatchedInstrumentName, 
                                                                       Converter={StaticResource NullToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </StackPanel>
                                    </Border>
                                </Expander>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </TabItem>
            
            <TabItem Header="Preview"
                     DataContext="{Binding Preview}"
                     MouseWheel="Preview_MouseWheel">
                <!-- Preview/Details Panel -->
                <Border Background="#f4f4f4" 
                        Padding="10" 
                        CornerRadius="4">
                    <Grid>
                        <Image Source="{Binding PreviewImage}"
                               Stretch="Uniform" 
                               Margin="10"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"
                               SnapsToDevicePixels="True"/>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                                    Margin="10">
                            <Button Content="←"
                                    Command="{Binding PreviousPageCommand}"
                                    IsEnabled="{Binding CanGoToPreviousPage}" 
                                    Width="30" 
                                    Margin="5"
                                    Opacity="0.5"/>

                            <TextBlock Text="{Binding PreviewPageDisplay}"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold" 
                                       Margin="10,0"
                                       Opacity="0.5"/>
                            <Button Content="→"
                                    Command="{Binding NextPageCommand}"
                                    IsEnabled="{Binding CanGoToNextPage}"
                                    Width="30" 
                                    Margin="5"
                                    Opacity="0.5"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>
            
        </TabControl>
        
        <!-- PDF File List -->
        <ListBox Grid.Row="1" Grid.Column="0"
                 ItemsSource="{Binding PdfFiles}" 
                 SelectedItem="{Binding SelectedPdf, Mode=TwoWay}"
                 DisplayMemberPath="FileName"
                 Margin="0,0,10,0"
                 AllowDrop="True"
                 PreviewMouseMove="PdfFilesListBox_PreviewMouseMove"
                 Drop="PdfFileListBox_Drop">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="PdfFilesListBox_PreviewMouseLeftButtonDown"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Grid Splitter -->
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Background="Gray" ShowsPreview="True"/>

        <!-- Bottom tab control -->
        <TabControl Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,10,0,0">
            <TabItem Header="Log">
                <ListBox ItemsSource="{Binding Source={StaticResource ReversedLogs}}"
                         VerticalAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:LogEntry}">
                            <TextBlock Text="{Binding Message}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" 
                                                         Value="Success">
                                                <Setter Property="Foreground"
                                                        Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" 
                                                         Value="Error">
                                                <Setter Property="Foreground"
                                                        Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" 
                                                         Value="Info">
                                                <Setter Property="Foreground"
                                                        Value="Gray"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Processing Queue">
                <TextBlock Text="(Coming Soon...)" Padding="10"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
